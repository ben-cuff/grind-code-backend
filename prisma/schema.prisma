datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model account {
  id        String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
}

model question {
  id             String          @id @default(uuid())
  questionNumber Int             @unique
  urlSolution    String
  solutionRoute  String
  urlQuestion    String
  pattern        questionPattern
  prompt         String
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

enum questionPattern {
  slidingWindow
  twoPointer
  fastSlowPointers
  binarySearch
  heapTopK
  bfs
  dfs
  bitwise
  backtracking
  dynamicProgramming1d
  dynamicProgramming2d
  greedy
  stack
  mergeIntervals
  math
  trees
}
