{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitAny": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "target": "es6",
        "module": "NodeNext",
        "moduleResolution": "nodenext"
    },
    "tsc-alias": {
        "resolveFullPaths": true,
        "verbose": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
