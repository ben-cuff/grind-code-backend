datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model account {
  id        String   @id
  email     String   @unique
  lastLogin DateTime @default(now())
  premium   Boolean  @default(false)
  usage     usage[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model question {
  id             String          @id @default(uuid())
  questionNumber Int             @unique
  name           String
  pattern        questionPattern
  prompt         String
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

model usage {
  id             String   @id @default(uuid())
  userId         String   @unique
  account        account  @relation(fields: [userId], references: [id])
  askAIUsage     Int      @default(0)
  askAILast      DateTime @default(now())
  interviewUsage Int      @default(0)
  interviewLast  DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

enum questionPattern {
  slidingWindow
  twoPointer
  fastSlowPointers
  binarySearch
  heapTopK
  bfs
  dfs
  bitwise
  backtracking
  dynamicProgramming1d
  dynamicProgramming2d
  greedy
  stack
  mergeIntervals
  math
  trees
  hashing
  linkedList
}
